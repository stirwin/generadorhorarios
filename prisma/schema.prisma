generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institucion {
  id               String             @id @default(cuid())
  nombre           String
  ciclo_escolar    String?
  dias_por_semana  Int     @default(5)
  lecciones_por_dia Int    @default(7)
  director_lunes_primera Boolean @default(true)
  creador          String?
  createdAt        DateTime @default(now())
  periodos         DefinicionPeriodo[]
  docentes         Docente[]
  clases           Clase[]
  asignaturas      Asignatura[]
  cargas           CargaAcademica[]
  horarios         Horario[]
  imports          ImportJob[]
}

model DefinicionPeriodo {
  id             String     @id @default(cuid())
  institucionId  String
  indice         Int
  abreviatura    String?
  hora_inicio    String?    // "08:00"
  hora_fin       String?    // "08:45"
  duracion_min   Int?       // 45
  institucion    Institucion @relation(fields: [institucionId], references: [id])
}

model Docente {
  id            String   @id @default(cuid())
  nombre        String
  abreviatura   String
  activo        Boolean  @default(true)
  directorLunesAplica Boolean @default(true)
  direccionGrupoId String?
  institucionId String
  institucion   Institucion @relation(fields: [institucionId], references: [id])
  direccionGrupo Clase? @relation("DocenteDireccionGrupo", fields: [direccionGrupoId], references: [id])
  cargas        CargaAcademica[]
  restricciones DocenteRestriccion[]
  horarioSlots  HorarioSlot[]

  @@unique([institucionId, abreviatura])
}

model Clase {
  id            String   @id @default(cuid())
  nombre        String
  abreviatura   String
  institucionId String
  institucion   Institucion @relation(fields: [institucionId], references: [id])
  cargas        CargaAcademica[]
  directores    Docente[] @relation("DocenteDireccionGrupo")
  horarioSlots  HorarioSlot[]

  @@unique([institucionId, abreviatura])
}

model Asignatura {
  id            String   @id @default(cuid())
  nombre        String
  abreviatura   String
  institucionId String
  institucion   Institucion @relation(fields: [institucionId], references: [id])
  cargas        CargaAcademica[]
  horarioSlots  HorarioSlot[]

  @@unique([institucionId, abreviatura])
}

model CargaAcademica {
  id            String   @id @default(cuid())
  asignaturaId  String
  claseId       String
  docenteId     String?
  sesiones_sem  Int      // CANTIDAD
  duracion_slots Int     // DURACION (en n√∫mero de lecciones)
  institucionId String
  asignatura    Asignatura @relation(fields: [asignaturaId], references: [id])
  clase         Clase      @relation(fields: [claseId], references: [id])
  docente       Docente?   @relation(fields: [docenteId], references: [id])
  institucion   Institucion @relation(fields: [institucionId], references: [id])
  horarioSlots  HorarioSlot[]
}

model ImportJob {
  id            String   @id @default(cuid())
  institucionId String
  usuario       String?
  status        String   @default("pendiente") // pendiente | error | completado
  raw_json      String?  // guardamos el preview como snapshot
  errores       String?  // errores en texto (si aplica)
  createdAt     DateTime @default(now())
  institucion   Institucion @relation(fields: [institucionId], references: [id])
}

model DocenteRestriccion {
  id         String   @id @default(cuid())
  docenteId  String
  dia        Int      // 0..6
  periodoInicio Int   // slot inicio dentro del dia
  periodoFin Int      // slot fin (inclusive)
  tipo       String   // bloqueo | permitido
  docente    Docente  @relation(fields: [docenteId], references: [id])
}

model Horario {
  id            String   @id @default(cuid())
  institucionId String
  nombre        String?
  areaMeetingsJson Json?
  statsJson     Json?
  createdAt     DateTime @default(now())
  institucion   Institucion @relation(fields: [institucionId], references: [id])
  slots         HorarioSlot[]
}

model HorarioSlot {
  id          String   @id @default(cuid())
  horarioId   String
  claseId     String
  cargaId     String
  docenteId   String?
  asignaturaId String
  dia         Int
  periodo     Int
  duracion    Int
  horario     Horario  @relation(fields: [horarioId], references: [id])
  clase       Clase    @relation(fields: [claseId], references: [id])
  carga       CargaAcademica @relation(fields: [cargaId], references: [id])
  docente     Docente? @relation(fields: [docenteId], references: [id])
  asignatura  Asignatura @relation(fields: [asignaturaId], references: [id])
}
